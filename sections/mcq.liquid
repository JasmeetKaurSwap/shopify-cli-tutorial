            "type": "text",
            "id": "option_1",
            "label": "Option 1"
          },
          {
            "type": "text",
            "id": "option_2",
            "label": "Option 2"
          },
          {
            "type": "text",
            "id": "option_3",
            "label": "Option 3"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "MCQ",
        "blocks": [
          {
            "type": "mcq"
          },
          {
            "type": "mcq"
          },
          {
            "type": "mcq"
          }
        ]
      }
    ]
  }
{% endschema %}

